<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style text Welcome -->
    <style name="welcome">
        <item name="android:fontFamily">@font/gothic_a1_light"</item>
        <item name="android:textColor">@color/text_color_hint</item>
        <item name="android:textSize">32sp</item>
    </style>

    <!-- Style text WAVE logo -->
    <style name="wave">
        <item name="android:fontFamily">@font/gothic_a1_medium"</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">96sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Style text let`s start ! -->
    <style name="lets_start">
        <item name="android:fontFamily">@font/gothic_a1"</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">40sp</item>
    </style>

    <!-- Style card view for custom button -->
    <style name="card_view_btn" parent="CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">24dp</item>
        <item name="cardBackgroundColor">@color/background_activity</item>
    </style>

    <!-- Style text view for custom button -->
    <style name="text_view_btn">
        <item name="android:fontFamily">@font/gothic_a1"</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!-- Style card view glass -->
    <style name="card_view_glass">
        <item name="cardCornerRadius">24dp</item>
        <item name="cardBackgroundColor">@color/background_card_view</item>
    </style>

    <!-- Style text input layout email -->
    <style name="text_input_layout_email">
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <!-- Style text input layout password-->
    <style name="text_input_layout_password">
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconMode">password_toggle</item>
        <item name="endIconTint">@color/white</item>
    </style>

</resources>